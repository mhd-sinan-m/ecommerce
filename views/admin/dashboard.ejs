<!DOCTYPE html>
<html lang="en">

<head>
<title>Admin Dashboard</title>
<%- include("layouts/head.ejs") %>
</head>
    
<script src="/admin/admin.js"> 
    showSection('add')
</script>
<style>
    trsh-edit {
        margin-top: -4.25rem;
    }
    .product::before {
    content: attr(hi); /* Displays the custom 'hi' attribute */
    position: fixed;
    top: 10px;
    right: 70px;
    background-color: rgba(74, 222, 128, 0.25);
    color: rgba(30, 41, 59, 0.8);
    padding: 4px;
    border-radius: 4px;
    font-size: 12px;
    opacity: 0;
    transition: opacity 0.3s;
    max-width: 320px;  
    max-height: 130px;
    overflow: auto;
    white-space: normal; 
    text-align: justify; 
    border: lightcoral dotted 2px;
}

.product:hover::before {
    opacity: 1; 
}
</style>

<body class="flex h-screen bg-gray-100 font-['roboto',sanserif]">

    <!-- Sidebar -->
    <div class="sidebar w-64 bg-gray-800 text-gray-200 h-full p-5">
        <div class="logo mb-6">
            <h2 class="text-xl font-bold">Admin Panel</h2>
        </div>
        <ul class="menu space-y-4">
            <li><a href="#" onclick="showSection('add')"
                    class="block text-center text-base hover:bg-green-500 p-3 rounded">Add Products</a></li>
            <li><a href="#" onclick="showSection('product')"
                    class="block text-center text-base hover:bg-green-500 p-3 rounded">Products</a></li>
            <li><a href="#" onclick="showSection('order')"
                    class="block text-center text-base hover:bg-green-500 p-3 rounded">Orders</a></li>
            <li><a href="/logout" class="block text-center hover:bg-green-500 p-3 text-base rounded">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content flex-1 p-6">
        <!-- HEADER-->
        <header>
            <h1 class="text-2xl font-bold mb-6">Dashboard</h1>
        </header>

        <!-- ORDER -->
        <section class="section hidden bg-white p-6 rounded-md" id="order">
            <p>Order Details Here</p>
        </section>

        <!-- PRODUCT -->
        <section class="section hidden bg-white p-6 rounded-md" id="product">
            <h1 class="text-xl font-bold mb-2 text-center">P R O D U C T s</h1>
            <div class=" flex flex-col gap-4 p-3 h-auto text-ellipsis whitespace-nowrap">
                <div
                    class="relative bg-green-300 text-xl p-2 md:h-auto rounded-md flex items-center text-black/65">
                    <h2 class="text-lg font-bold mr-auto">
                        Name of product
                    </h2>
                    <div class="flex items-center font-bold md:w-40 sm:w-9">Category
                    </div>
                    <div class="flex items-center font-bold md:w-24 sm:w-6">Stock
                    </div>
                    <div class="flex items-center font-bold md:w-24 sm:w-6">Rupees
                    </div>
                </div>
                <% products.forEach((p)=> { %>
                <div hi="<%= p.description %>"
                        class="relative product  bg-green-400 text-slate-800/80 text-xl p-2 md:h-auto rounded-md flex items-center">
                        <img src="<%= p.image %>" alt="<%= p.name %>" class="aspect-square object-cover h-20 w-20">
                        <h2 class="text-lg font-bold w-96 mr-auto overflow-hidden">
                            <%= p.name %>
                        </h2>
                        <b>&nbsp;&nbsp;&nbsp;</b>
                        <div class="flex items-center justify-center md:w-40 sm:w-9"><%= p.category %>
                        </div>
                        <div class="flex items-center justify-center md:w-24 sm:w-6"><%= p.stock %>
                        </div>
                        <div class="flex items-center justify-center md:w-24 sm:w-6"><%= p.price %>
                        </div>
                        <div class="relative">
                        <div onclick="product('<%= p.code %>','DELETE')">
                            <i class="fa-solid fa-trash-can"></i>
                        </div>
                        <a style="top: 48px;"  href="product/<%= p.code %>">
                            <i class="fa-sharp-duotone fa-solid fa-gear"></i>
                        </a>
                       </div>
                </div>
                    <% }) %>
                    <div class="product" title="Product Details">
    Product Name
</div>

            </div>
              
        </section>

        <!-- Add PRODUCT -->
        <section class="section hidden bg-white p-6 rounded-md" id="add">
            <h3 class="text-xl font-bold mb-6 text-center">Add New Product</h3>
            <form action="products" method="POST" enctype="multipart/form-data">

                <!-- Product Name -->
                <div class="form mb-4">
                    <label for="productName" class="block font-semibold mb-2 text-base">Product Name</label>
                    <input type="text" id="productName" name="name" class="w-full p-3 border border-gray-300 rounded"
                        required>
                </div>

                <!-- Product Description -->
                <div class="form mb-4">
                    <label for="productDescription" class="block font-semibold text-base mb-2">Product
                        Description</label>
                    <textarea id="productDescription" name="description" rows="5"
                        class="w-full p-3 border border-gray-300 rounded resize-none" required></textarea>
                </div>

                <!-- Product Price -->
                <div class="form mb-4">
                    <label for="productPrice" class="block font-semibold text-base mb-2">Price ($)</label>
                    <input type="number" id="productPrice" name="price"
                        class="w-full p-3 border border-gray-300 rounded" required>
                </div>

                <!-- Product Category -->
                <div class="form mb-4">
                    <label for="productCategory" class="block font-semibold text-base mb-2">Category</label>
                    <select id="productCategory" name="category" class="w-full p-3 border border-gray-300 rounded"
                        required>
                        <option value="">Select Category</option>
                        <option value="electronics">Electronics</option>
                        <option value="clothing">Clothing</option>
                        <option value="home-garden">Home & Garden</option>
                        <option value="beauty-health">Beauty & Health</option>
                    </select>
                </div>

                <!-- Product Image -->
                <div class="form mb-4">
                    <div class="form mb-4">
                        <label for="productImage" class="block font-semibold text-base mb-2">Product Image</label>
                        <input type="file" name="productImage" accept="image/*" class="w-full p-3 border border-gray-300 rounded" required>
                    </div>
                </div>

                <!-- Product Stock -->
                <div class="form mb-4">
                    <label for="productStock" class="block font-semibold text-base mb-2">Stock Quantity</label>
                    <input type="number" name="stock" class="w-full p-3 border border-gray-300 rounded" required>
                </div>
                <div class="form mb-4">
                    <label for="productStock" class="block font-semibold text-base mb-2">Product Code</label>
                    <input type="text" name="code" class="w-full p-3 border border-gray-300 rounded" required>
                </div>

                <!-- Submit Button -->
                <button type="submit"  id="submit" class="w-full bg-gray-800 text-base text-white p-3 rounded hover:bg-gray-700">Add
                    Product</button>
            </form>
        </section>
    </div>

</body>

</html>